{% extends "layouts/login.html.twig" %}

{% block title %}Forgot Password - Tickety{% endblock %}

{% block form %}
    <form method="POST" action="/api/auth/forgot-password" class="space-y-4">
        <p class="text-gray-600 text-sm mb-6">Enter your email address and we'll send you a link to reset your password.</p>

        {% if message %}
            <div class="rounded-lg bg-green-50 p-4 text-sm text-green-700 border border-green-200">
                {{ message }}
            </div>
        {% endif %}

        <!-- Email Field -->
        <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email Address <span class="text-red-500">*</span>
            </label>
            <input
                type="email"
                id="email"
                name="email"
                placeholder="Enter your email"
                required
                class="w-full h-13 px-3 border border-gray-100 rounded-xl text-body-lg text-gray-900 transition-colors outline-0 focus:!border-primary-500 focus:bg-primary-50 max-md:h-12"
            />
        </div>

        <!-- Submit Button -->
        <button
            type="submit"
            class="w-full h-13 px-4 bg-primary-500 text-white font-semibold rounded-xl hover:bg-primary-600 transition-all max-md:h-12 mt-6">
            Send Reset Link
        </button>

        <!-- Back to Login -->
        <div class="mt-8 text-center text-gray-600">
            <a href="/sign-in" class="font-medium text-primary-500 hover:text-primary-600">
                Back to Login
            </a>
        </div>
    </form>
{% endblock %}
