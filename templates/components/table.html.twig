{#
  Table Component - Data display table

  Usage:
  {% include 'components/table.html.twig' with {
    headers: ['ID', 'Name', 'Status', 'Date'],
    rows: tickets,
    className: ''
  } %}
#}

{% set headers = headers|default([]) %}
{% set rows = rows|default([]) %}
{% set striped = striped|default(true) %}

<div class="overflow-x-auto">
  <table class="w-full text-left">
    <!-- Table Head -->
    {% if headers %}
      <thead class="border-b border-gray-100 bg-gray-50">
        <tr>
          {% for header in headers %}
            <th class="px-6 py-4 text-body-sm font-semibold text-gray-700">
              {{ header }}
            </th>
          {% endfor %}
        </tr>
      </thead>
    {% endif %}

    <!-- Table Body -->
    <tbody>
      {% for row in rows %}
        <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors {% if striped and loop.index % 2 == 0 %}bg-gray-25{% endif %}">
          {% for cell in row %}
            <td class="px-6 py-4 text-body-md text-gray-700">
              {{ cell }}
            </td>
          {% endfor %}
        </tr>
      {% else %}
        <tr>
          <td colspan="99" class="px-6 py-8 text-center text-gray-500">
            No data available
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

<!-- Empty State -->
{% if rows|length == 0 %}
  <div class="text-center py-12">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
    </svg>
    <p class="mt-4 text-gray-600">No records found</p>
  </div>
{% endif %}
